<html>
    <head>
        <title>About_time</title>
                <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
        crossorigin="anonymous"></script>
                <link rel="icon" href="/images/favicon.png" type="image/png">
                <link rel="shortcut icon" type="image/png" href="/images/favicon.png">


        <style>
          body {
        background-color: rgb(24, 24, 24);
    } 
    a{
        font-family: monospace;
    }      
    h5{
font-family: monospace;
    }
    div{
font-family: monospace;
    }
        </style>
    </head>
    <body>
         <ul class="nav justify-content-end">
  <li class="nav-item">
    <a class="nav-link active text-danger" aria-current="page" href="#">Home</a>
  </li>


</ul>

<a class="text-danger" data-bs-toggle="offcanvas" href="#offcanvas_div" role="button" aria-controls="offcanvasExample" style="text-decoration: none;font-size: 50px;">
  ≡
</a>


<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvas_div" aria-labelledby="offcanvasExampleLabel" >
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasExampleLabel">About_time</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
   <h5>For more options ,
    <br>
     please create an ABOUT_TIME account .....
     <br>
    or Login if you have one 
</h5>
  
  </div>

  <div class="mb-3 text-center">
    <a class="btn btn-danger text-white me-4" href="signin" style="text-decoration: none;">Login</a>   

<a class="btn btn-danger text-white" href="signup" style="text-decoration: none;">Create account</a>
  </div>

</div>

<div class="card mb-3 mt-3 bg-dark border-danger shadow ">
  <div class="card-body">
    <h5 class="card-title text-danger">Today in History</h5>

    <div class="list-group">
      <% if (clip && clip.length > 0) { %>
        <% clip.forEach(item => { %>
          <div class="list-group-item bg-dark text-white border-0">
            <h6 class="mb-1"><%= item.year %></h6>
            <p class="mb-1"><%= item.text %></p>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-muted">No events today.</p>
      <% } %>
    </div>

    <a href="/today" class="btn btn-danger btn-sm mt-2"   data-bs-toggle="modal" 
   data-bs-target="#customModal">See More</a>
  </div>
</div>
  
 <div class="container mt-5">
    <div class="row">
      <div class="row-md-6">
        <div class="card bg-dark border-danger shadow h-50">
          <div class="card-body">
            <h5 class="card-title text-danger">Births on this day</h5>
              <div class="list-group">
      <% if (birth && birth.length > 0) { %>
        <% birth.forEach(item => { %>
          <div class="list-group-item bg-dark text-white border-0">
            <%= item.year %> — <%= item.text %>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-white">No events today.</p>
      <% } %>
    </div>
          </div>
                      <a href="#" class="btn btn-danger btn-sm"   data-bs-toggle="modal" 
   data-bs-target="#customModal">See More</a>

        </div>


         <div class="card bg-dark border-danger shadow mt-5">
          <div class="card-body">
            <h5 class="card-title text-danger">Deaths on this day</h5>
            <div class="list-group">
      <% if (death && death.length > 0) { %>
        <% death.forEach(item => { %>
          <div class="list-group-item bg-dark text-white border-0">
            <%= item.year %> — <%= item.text %>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-white">No events today.</p>
      <% } %>
    </div>
    <a href="#" 
   class="btn btn-danger btn-sm" 
   data-bs-toggle="modal" 
   data-bs-target="#customModal">
   See More
</a>

          </div>
        </div>
      </div>
    </div>
 </div>











 <!-- Modal -->
<div class="modal fade" id="customModal" tabindex="-1" aria-labelledby="customModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      
      <div class="modal-header">
        <h5 class="modal-title text-danger" id="customModalLabel">Sign in .</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      
      <div class="modal-body">
 To see more timeline information , you need to be signed in .
      </div>

      <div class="text-center mb-3" >
     <a class="btn btn-danger me-3" href="signin">Login</a>
      <a class="btn btn-danger" href="signup">Signup</a>
      </div>
 
      
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
      
    </div>
  </div>
</div>

    </body>
</html>
