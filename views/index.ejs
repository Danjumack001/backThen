    <ul class="nav justify-content-end">
      <li class="nav-item">
        <a class="nav-link active text-danger" aria-current="page" href="#">Home</a>
      </li>
    </ul>

    <a class="text-danger" data-bs-toggle="offcanvas" href="#offcanvas_div" role="button"
      aria-controls="offcanvasExample" style="text-decoration: none;font-size: 50px;">
      ≡
    </a>

<a class="text-danger" data-bs-toggle="offcanvas" href="#offcanvas_div" role="button" aria-controls="offcanvasExample" style="text-decoration: none;font-size: 50px;">
  ≔
</a>


<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvas_div" aria-labelledby="offcanvasExampleLabel" >
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasExampleLabel">About_time</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
   <h5>For more options ,
    <br>
     please create an ABOUT_TIME account .....
     <br>
    or Login if you have one 
</h5>
  
  </div>

  <div class="mb-3 text-center">
    <a class="btn btn-danger text-white me-4" href="signin" style="text-decoration: none;">Login</a>   

<a class="btn btn-danger text-white" href="signup" style="text-decoration: none;">Create account</a>
  </div>

</div>

<div class="card mb-3 mt-3 bg-light border-danger shadow ">
  <div class="card-body">
    <h5 class="card-title text-danger">Today in History</h5>

    <div class="list-group">
      <% if (clip && clip.length > 0) { %>
        <% clip.forEach(item => { %>
          <div class="list-group-item bg-light text-black border-0">
            <h6 class="mb-1" style="font-weight: bold;"><%= item.year %></h6>
            <p class="mb-1"><%= item.text %></p>
          </div>
        <% }) %>
      <% } else { %>
        <p>No events today.</p>
      <% } %>
    </div>

    <div class="container my-4">
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title text-danger">Today in History</h5>

          <div class="list-group">
            <% if (clip && clip.length > 0) { %>
              <% clip.forEach(item => { %>
                <div class="list-group-item">
                  <h6 class="mb-1"><%= item.year %></h6>
                  <p class="mb-1"><%= item.text %></p>
                </div>
              <% }) %>
            <% } else { %>
              <p>No events today.</p>
            <% } %>
          </div>

          <a href="/today" class="btn btn-danger btn-sm mt-2" data-bs-toggle="modal"
            data-bs-target="#customModal">See More</a>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6 mb-4">
          <div class="card bg-dark border-danger shadow h-100">
            <div class="card-body">
              <h5 class="card-title text-danger">Births on this day</h5>
              <div class="list-group">
                <% if (birth && birth.length > 0) { %>
                  <% birth.forEach(item => { %>
                    <div class="list-group-item bg-dark text-white border-0">
                      <%= item.year %> — <%= item.text %>
                    </div>
                  <% }) %>
                <% } else { %>
                  <p class="text-white">No events today.</p>
                <% } %>
              </div>
            </div>
            <a href="#" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#customModal">See More</a>
          </div>
        </div>

        <div class="col-md-6 mb-4">
          <div class="card bg-dark border-danger shadow h-100">
            <div class="card-body">
              <h5 class="card-title text-danger">Deaths on this day</h5>
              <div class="list-group">
                <% if (death && death.length > 0) { %>
                  <% death.forEach(item => { %>
                    <div class="list-group-item bg-dark text-white border-0">
                      <%= item.year %> — <%= item.text %>
                    </div>
                  <% }) %>
                <% } else { %>
                  <p class="text-white">No events today.</p>
                <% } %>
              </div>
              <a href="#" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#customModal">See More</a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" id="customModal" tabindex="-1" aria-labelledby="customModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">

          <div class="modal-header">
            <h5 class="modal-title text-danger" id="customModalLabel">Sign in .</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>

          <div class="modal-body">
            To see more timeline information , you need to be signed in .
          </div>

          <div class="text-center mb-3">
            <a class="btn btn-danger me-3" href="signin">Login</a>
            <a class="btn btn-danger" href="signup">Signup</a>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>

        </div>
      </div>
    </div>
  </body>
</html>
